    <parameter name="browserVersion" value="55.0"/>
    <parameter name="url" value="https://ca.yahoo.com"/>
    <parameter name="testName" value="TestYahooApp"/>

    <test name = "EmailTest">
        <classes>
            <class name="TestLoginPage.TestLogin"/>
            <class name="TestEmail.TestSendEmail"/>
